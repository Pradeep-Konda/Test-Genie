{
  "name": "vscode-bdd-ai",
  "displayName": "AI BDD Test Generator",
  "description": "Generate and execute BDD tests automatically using OpenAI + LangGraph backend",
  "version": "1.0.0",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["AI", "Testing"],
  "activationEvents": ["onCommand:extension.generateBDD"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateBDD",
        "title": "Generate BDD Tests"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vscode-test": "^2.2.3"
  },
  "dependencies": {
    "axios": "^1.6.8"
  }
}
